@model List<BaiTapLon.Models.SanPham>
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	List<DanhMuc> listDanhMuc = (List<DanhMuc>)ViewData["DanhMuc"];
}


			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Quản lý <b>Sản phẩm</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Thêm mới sản phẩm</span></a>					
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Hình ảnh</th>
						<th>Tên sản phẩm</th>
						<th>Loại sản phẩm</th>
						<th>Giá</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model)
					{
						<tr>
							<td>
								<img style="height:100px; width:100px; border-radius:50%" src=@("/assets/img" + item.HinhAnh) alt="">
							</td>
							<td>@item.TenSanPham</td>
							<td>@item.DanhMuc.TenDanhMuc</td>
							<td>@item.Gia</td>
							<td>
								<a asp-action="Edit" asp-controller="SanPhams" asp-route-id ="@item.ID"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
								<a asp-action="Delete" asp-controller="SanPhams" asp-route-id ="@item.ID"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			  
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form asp-action="Create" asp-controller="SanPhams", new { enctype = "multipart/form-data" } >
				<div class="modal-header">						
					<h4 class="modal-title">Thêm mới sản phẩm</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<div class="form-group">
						<label>Tên sản phẩm</label>
						<input name="TenSanPham" type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Danh mục</label>
						<select name="DanhMucID">
							@foreach(var i in listDanhMuc)
							{
								<option value="@i.ID">@i.TenDanhMuc</option>
							}
						</select>
					</div>
					<div class="form-group">
						<input name="file" type="file" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Giá</label>
						<input name="Gia" type="text" class="form-control" required>
					</div>		
					<div class="form-group">
						<label>Mô tả</label>
						<textarea name="MoTa" class="form-control" required></textarea>
					</div>
								
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-info" value="Save">
				</div>
			</form>
		</div>
	</div>
</div>
<!-- Edit Modal HTML -->
<div id="editEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form asp-action="Edit" asp-controller="SanPhams">
				<div class="modal-header">						
					<h4 class="modal-title">Edit Employee</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<div class="form-group">
						<label>Tên sản phẩm</label>
						<input type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<input type="file" class="form-control" required>
					</div>
					<div class="form-group">
						<label>Giá</label>
						<input type="text" class="form-control" required>
					</div>		
					<div class="form-group">
						<label>Mô tả</label>
						<textarea class="form-control" required></textarea>
					</div>
								
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-info" value="Save">
				</div>
			</form>
		</div>
	</div>
</div>
</div>