@model List<BaiTapLon.Models.TinTuc>
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Quản lý <b>tin tuc</b></h2>
					</div>
					<div class="col-sm-6">
						<a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Thêm mới tin tuc</span></a>					
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Hình ảnh</th>
						<th>Tên tin tuc</th>
						<th>Ngày đăng</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model)
					{
						<tr>
							<td>
								<img style="height:100px; width:100px; border-radius:50%" src=@("/assets/img" + item.HinhAnh) alt="">
							</td>
							<td>@item.TenTinTuc</td>
							<td>@item.NgayDang</td>
							<td>
								<a asp-action="Edit" asp-controller="SanPhams" asp-route-id ="@item.ID"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
								<a asp-action="Delete" asp-controller="TinTuc" asp-route-id ="@item.ID"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			  
<!-- Edit Modal HTML -->
<div id="addEmployeeModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form asp-action="Create" asp-controller="TinTuc", new { enctype = "multipart/form-data" } >
				<div class="modal-header">						
					<h4 class="modal-title">Thêm mới tin tức</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<div class="form-group">
						<label>Tên tin tức</label>
						<input name="TenTinTuc" type="text" class="form-control" required>
					</div>
					<div class="form-group">
						<input name="file" type="file" class="form-control" required>

					<div class="form-group">
						<label>Nội dung</label>
						<textarea name="NoiDung" class="form-control" required></textarea>
					</div>
								
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-info" value="Save">
				</div>
			</form>
		</div>
	</div>
</div>