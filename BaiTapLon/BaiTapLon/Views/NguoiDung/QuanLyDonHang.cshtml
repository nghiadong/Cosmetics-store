@model List<BaiTapLon.Models.DonHangChiTiet>
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
	float TongTien = 0;
}


			<div class="table-title">
				<div class="row">
					<div class="col-sm-6">
						<h2>Quản lý <b>Đơn hàng</b></h2>
					</div>
				</div>
			</div>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th style="width:150px">ID Don hang</th>
						<th>Tên sản phẩm</th>
						<th>Số lượng</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model)
					{
						<tr>
							<td>@item.DonHang.ID</td>
							<td>@item.SanPham.TenSanPham</td>
							<td>@item.SoLuong</td>
						</tr>
					}
				</tbody>
			</table>
